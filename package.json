{
  "name": "switch-vscode",
  "displayName": "switch-vscode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
        "switchView": [
            {
                "type": "webview",
                "id": "switch.scenario",
                "name": "Scenario"
            },
            {
                "type": "webview",
                "id": "switch.inputs",
                "name": "Inputs"
            },
            {
                "type": "webview",
                "id": "switch.outputs",
                "name": "Outputs"
            },
            {
                "type": "webview",
                "id": "switch.modules",
                "name": "Modules"
            },
            {
                "type": "webview",
                "id": "switch.solver",
                "name": "Solver"
            }
        ]
    },
    "viewsContainers": {
        "activitybar": [
            {
                "icon": "resources/switch.svg",
                "id": "switchView",
                "title": "Switch Model"
            }
        ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "bundle": "node esbuild.mjs",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "esbuild": "^0.19.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
