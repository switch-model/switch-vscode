{
  "name": "switch-vscode",
  "displayName": "switch-vscode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
        "switchView": [
            {
                "type": "webview",
                "id": "switch.scenario",
                "name": "Scenario"
            },
            {
                "type": "webview",
                "id": "switch.inputs",
                "name": "Inputs"
            },
            {
                "type": "webview",
                "id": "switch.outputs",
                "name": "Outputs"
            },
            {
                "type": "webview",
                "id": "switch.modules",
                "name": "Modules"
            },
            {
                "type": "webview",
                "id": "switch.solver",
                "name": "Solver"
            }
        ]
    },
    "viewsContainers": {
        "activitybar": [
            {
                "icon": "resources/switch.svg",
                "id": "switchView",
                "title": "Switch Model"
            }
        ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc",
    "package": "npm run copy:codicons && npm run compile && npm run tailwind && npm run bundle",
    "bundle": "node esbuild.mjs",
    "watch": "npm run copy:codicons && concurrently -c yellow,red -n tailwind,bundle \"npm run tailwind -- --watch\" \"npm run bundle -- --watch\"",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "tailwind": "tailwindcss -i ./src/webview/main.css -o ./out/webview/main.css",
    "copy:codicons": "shx cp ./node_modules/@vscode/codicons/dist/codicon.css ./node_modules/@vscode/codicons/dist/codicon.ttf ./out/webview/"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.33",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vscode-messenger": "^0.4.5",
    "vscode-messenger-common": "^0.4.5",
    "vscode-messenger-webview": "^0.4.5"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/vscode-webview": "^1.57.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "concurrently": "^8.2.1",
    "esbuild": "^0.19.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.3",
    "shx": "^0.3.4",
    "@vscode/test-electron": "^2.3.2"
  }
}
