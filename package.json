{
  "name": "switch-vscode",
  "displayName": "switch-vscode",
  "publisher": "switch-model",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:options.txt"
  ],
  "main": "./out/extension.js",
  "extensionDependencies": [
    "ms-python.python"
  ],
  "contributes": {
    "views": {
      "switchView": [
        {
          "type": "webview",
          "id": "switch.scenario",
          "name": "Scenario"
        },
        {
          "type": "webview",
          "id": "switch.inputs",
          "name": "Inputs"
        },
        {
          "type": "webview",
          "id": "switch.outputs",
          "name": "Outputs"
        },
        {
          "type": "webview",
          "id": "switch.modules",
          "name": "Modules"
        },
        {
          "type": "webview",
          "id": "switch.solver",
          "name": "Solver"
        }
      ],
      "switchRunningSolvers": [
        {
          "type": "webview",
          "id": "switch.solver-tab",
          "name": "Running Solvers"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "resources/switch.svg",
          "id": "switchView",
          "title": "Switch Model"
        }
      ],
      "panel": [
        {
          "icon": "resources/switch.svg",
          "id": "switchRunningSolvers",
          "title": "Running Solvers"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc",
    "package": "npm run copy:codicons && npm run compile && npm run tailwind && npm run bundle",
    "bundle": "node esbuild.mjs",
    "watch": "npm run copy:codicons && concurrently -c yellow,red -n tailwind,bundle \"npm run tailwind -- --watch\" \"npm run bundle -- --watch\"",
    "lint": "eslint src --ext ts",
    "test": "vitest",
    "tailwind": "tailwindcss -i ./src/webview/main.css -o ./out/webview/main.css",
    "copy:codicons": "shx cp ./node_modules/@vscode/codicons/dist/codicon.css ./node_modules/@vscode/codicons/dist/codicon.ttf ./out/webview/"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.33",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "async-mutex": "^0.4.0",
    "chevrotain": "10.4.2",
    "inversify": "^6.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.1.13",
    "terminate": "^2.6.1",
    "vscode-messenger": "^0.4.5",
    "vscode-messenger-common": "^0.4.5",
    "vscode-messenger-webview": "^0.4.5"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.198",
    "@types/node": "20.2.5",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/vscode": "^1.70.0",
    "@types/vscode-webview": "^1.57.2",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "concurrently": "^8.2.1",
    "esbuild": "^0.19.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "lodash": "4.17.21",
    "shx": "^0.3.4",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.3",
    "vitest": "~0.34.2"
  }
}
